.user-page{
  display: grid;
  position: relative;
  height: 100%;
  width: 100%;
  grid-template-columns: 33% 33% 33%;
  grid-template-rows: 33% 33% 33%;
  .welcome-div{
    text-align: center;
    grid-column: 1 / 3;
    grid-row: 1 / 2;
    position: absolute;
    width: 150%;
    top: 40%;
    span.name{
      font-size: 5em;
    } .user-summary{
      width: 45%;
      margin: 0 auto;
    }  p{
      text-align: center;}
    }
  .projects-page-link{
    grid-column: 1 / 2;
    grid-row: 1 / 2;
    top: 0;
    left: 0;
  } .get-quotes{
    grid-column: 3 / 4;
    grid-row: 1 / 2;
    text-align: right;
  } .user-tasks {
    grid-column: 1 / 2;
    grid-row: 3 / 4;
    position: absolute;
    bottom: 0;
  } .user-notes{
    grid-column: 3 / 4;
    grid-row: 3 / 4;
    position: absolute;
    bottom: 0;
    right: 0;
  }
}

#notifications{
  overflow-y: scroll;
  background: rgba(0,0,0,0.3);
  color: #dedede;
  height: 35vh;
  ul{
    padding: 0;
  }
  li{
    list-style: none;
    padding: 0 5%;
  }
}

#tasks-pane{
  height: 70%;
  grid-row: 2 / 3;
  grid-column: 1 / 2;
  position: absolute;
  bottom: 0;
  .task-list{
    overflow-y: scroll;
    height: 100%;
  }
}

.notepad{
  grid-row: 3 / 4;
  grid-column: 3 / 4;
  position: absolute;
  bottom: 40px;
  right: 0px;
  .text-area-box{
    height: 20em;
    width: 15em;
  }
}
