.user-page{
  display: grid;
  position: relative;
  grid-template-columns: 33% 33% 33%;
  grid-template-rows: 33% 33% 33%;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  .projects-page-link{
    grid-column: 1 / 2;
    grid-row: 1 / 2;
    top: 0;
    left: 0;
  } .get-quotes{
    grid-column: 3 / 4;
    grid-row: 1 / 2;
    text-align: right;
  } .user-summary{
    grid-column: 2 / 3;
    grid-row: 2 / 3;
  } .user-tasks {
    grid-column: 1 / 2;
    grid-row: 3 / 4;
    position: absolute;
    bottom: 0;
  } .user-notes{
    grid-column: 3 / 4;
    grid-row: 3 / 4;
  }
}

#notifications{
  overflow-y: scroll;
  background: rgba(0,0,0,0.3);
  color: #dedede;
  height: 400px;
  ul{
    padding: 0;
  }
  li{
    list-style: none;
    padding: 0 5%;
  }
}

#tasks-pane{
  display: none;
  height: 70%;
  grid-row: 2 / 3;
  grid-column: 1 / 2;
  position: absolute;
  bottom: 0;
  .task-list{
    overflow-y: scroll;
    height: 100%;
  }
}
