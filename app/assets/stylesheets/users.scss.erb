.user-page{
  display: grid;
  grid-template-columns: 33% 33% 33%;
  grid-template-rows: 33% 33% 33%;
  .projects-page-link{
    grid-column: 1 / 2;
    grid-row: 1 / 2;
  } .get-quotes{
    grid-column: 3 / 4;
    grid-row: 1 / 2;
    text-align: right;
  } .user-summary{
    grid-column: 2 / 3;
    grid-row: 2 / 3;
  } .user-tasks {
    grid-column: 1 / 2;
    grid-row: 3 / 4;
  } .user-notes{
    grid-column: 3 / 4;
    grid-row: 3 / 4;
  }
}
#notifications{
  overflow-y: scroll;
  height: 400px;
  background: rgba(0,0,0,0.3);
  color: #dedede;
  ul{
    padding: 0;
  }
  li{
    list-style: none;
    padding: 0 5%;
  }
}
