<div class="form-page">
  <%= form_for [@project, @member] do |f| %>
    <% if @member.errors.any? %>
      <ul class="errors">
        <% @member.errors.full_messages.each do |m| %>
        <li><%= m %></li>
        <% end %>
      </ul>
    <% end %>

    <div class="field">
       <%= f.label :user, value: "Find by user by email:" %>
       <%= f.email_field :user, placeholder: "george-micheal@bluth.com", id: "ajax", list: 'ajax-email' %>
       <datalist id="ajax-email"></datalist>
    </div>

    <div class="field">
       <%= f.label :role %>
       <%= f.text_field :role, placeholder: "Frozen banana seller" %>
    </div>

     <%= f.submit %>

  <% end %>
</div>
