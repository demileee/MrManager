<div class="form-page">

  <% if flash.any? %>
  <ul class="errors">
    <% flash.each do |type, msg|  %>
    <li><%= msg %></li>
    <% end %>
  </ul>
  <% end %>

  <%= form_for([@project, @member]) do |f| %>
    <% if @member.errors.any? %>
      <ul class="errors">appl
        <% @member.errors.full_messages.each do |m| %>
        <li><%= m %></li>
        <% end %>
      </ul>
    <% end %>


    <div class="field">
       <%= f.label :user, value: "Find by user by email:" %>
       <%= f.email_field :user, placeholder: "george-micheal@bluth.com", id: "ajax", list: 'ajax-email' %>
       <datalist id="ajax-email"></datalist>
    </div>

    <div class="field">
       <%= f.label :role %>
       <%= f.text_field :role, placeholder: "Frozen banana seller" %>
    </div>

     <%= f.submit "Add Member to Project"%>

  <% end %>

  <%= form_tag(invite_project_members_path(project_id: @project), method: "POST") do %>
    <div class="field">
      <%= label_tag :email, "Email: " %>
      <%= email_field :email, "" %>
    </div>

    <%= submit_tag "Invite New Member" %>
  <% end %>

</div>
