<!DOCTYPE html>
<html>
  <head>
    <title>MrManager</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body style="background-image:url(<%= new_image.image %>)";>

    <% if current_user %>
        <%= link_to "#{current_user.first_name}'s Dashboard", user_path(current_user) %>
        | <%= link_to "Logout", :logout, method: :delete %>
    <% end %>

      <main>
        <%= yield %>
      </main>
  </body>
</html>
