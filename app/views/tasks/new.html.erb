<h1>Add Task</h1>

<%= link_to "Back", project_path(@project) %>

<%= form_for ([@project, @task]) do |f| %>
  <div class="">
    <%= f.label :task_body %>
    <%= f.text_area :task_body %>
  </div>

  <div class="">
    <%= f.label :priority %>
    <%= f.select :priority, [1, 2, 3] %>
  </div>

  <% if @project.user == current_user %>
    <div class="">
      <%= f.label :user, "Assign to Member" %>
      <%= f.select :user, @project.members.map { |member| member.user.full_name } %>
    </div>
  <% end %>

  <div class="">
    <%= f.submit %>
  </div>
<% end %>
