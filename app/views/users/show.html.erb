<div class="user-page">

  <div class="edit-link top-left">
    <%= link_to "Edit yourself", edit_user_path %>
  </div>

  <div class="welcome-div">
    <span class="name">Welcome, <%= @user.first_name %></span>
    <% if @user.task.present? %>
    <div class="pin-task">
      <%= @user.task.task_body %></h1>
    </div>


    <%= link_to project_path(@user.task.project) do %>
      <div class="task-prop green"><%= @user.task.project.title %></div>
    <% end %>
    <div class="task-prop red"><%= @user.task.project.hard_deadline %></div>

    <%= link_to completed_project_task_path(@user.task.project, @user.task), method: :patch do %>
      <div class="task-prop blue">Complete</div>
    <% end %>

    <% else %>
    <h2>What are you focused on today?</h2>
    <div id="user-task-link">
      <%= link_to "See all tasks", "#"%>
    </div>
    <% end %>
    <div class="user-summary">
      <h1>Notifications</h1>
      <% if @notifications.present? %>
      <%= link_to "Mark as Read", last_read_user_path, method: :patch, :class => 'mark-read' %>
      <div id="notifications">
        <%= render @notifications %>
      </div>
      <% else %>
      <p>You're up to date!</p>
    <% end %>
    </div>
  </div>

  <div class="get-quotes top-right">
   <%= link_to "Need Encouragement?" %>
  </div>

  <div id="tasks-pane">
    <h1>Your Tasks</h1>
    <ul class="task-list">
      <% @tasks.each do |task| %>
      <li>
        <p><%= task.task_body %></p>
        <%= link_to project_path(task.project) do %>
          <div class="task-prop green"><%= task.project.title %></div>
        <% end %>
        <div class="task-prop red"><%= task.project.hard_deadline %></div>

        <%= link_to completed_project_task_path(task.project, task), method: :patch do %>
          <div class="task-prop blue">Complete</div>
        <% end %>

        <%= link_to pin_task_user_path(task: task), method: :patch do %>
          <div class="task-prop white">Pin</div>
        <% end %>
      </li>
      <% end %>
    </ul>
  </div>

  <div class="user-tasks bottom-left">
    <%= link_to "Tasks","#", :class => "task-link" %>
  </div>

  <div class="notepad">
    <%= form_for(@user) do |f| %>
      <div class="field">
        <%= f.text_area :notes, :class => "text-area-box" %>
      </div>
      <div class="submit">
        <%= f.submit "Add Note"%>
      </div>
    <% end %>
  </div>
  <div class="user-notes bottom-right">
    <%= link_to "Notes", "#", :class => "notepad-link" %>
  </div>

</div>
