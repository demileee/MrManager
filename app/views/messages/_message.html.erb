<% if current_user == message.user%>
  <div class="message-owner">
    <p class="message_body"><%= message.message_body %></p>
    <%= image_tag(message.user.profile_pic, class: "profile_pic") %>
    <div class="create_task">
      <%= link_to new_project_task_path(@project, {task_body: message.message_body}), class: 'create_task_button' do %>
        <div class="button orange">Create Task from message</div>
      <% end %>
    </div>
    <p class="user_name">Me</p>
  </div>
<% else %>
  <div class="message" >
    <%= image_tag(message.user.profile_pic, class: "profile_pic") %>
    <p class="message_body"><%= message.message_body %></p>
    <p class="user_name"><%= message.user.full_name %></p>
    <div class="create_task">
      <% if current_user == @project.user %>
        <%= link_to "Create Task from message", new_project_task_path(@project, {task_body: message.message_body}), class: 'button' %>
      <% end %>
    </div>
  </div>
<% end %>
